<b:style src="./token.css"/>
<b:isolate/>
<b:define name="problem" type="bool"/>

<div
  class="token {problem}"
  style="
    top: {top}px;
    left: {left}px;
    width: {width}px;
    height: {height}px;
  ">
  <span class="caption caption_{problem}">
    <span b:hide="{missedActions}">{role}</span>
    <span b:show="{missedActions}">missed: {missedActions}</span>
  </span>
</div>
