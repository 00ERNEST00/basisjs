<b:style src="./template-info-binding.css"/>
<b:isolate/>
<b:define name="used" type="bool"/>

<div class="binding binding_{used}">
  <span class="caption caption_{used} caption_{highlight}" event-click="pickValue" event-mouseenter="enter" event-mouseleave="leave">
    {name}
  </span>
  <span b:show="{used}" class="value">
    {value}
  </span>
</div>
