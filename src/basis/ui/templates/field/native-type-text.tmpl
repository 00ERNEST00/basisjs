<b:style src="./native-type-text.css"/>
<b:define name="validity" type="enum" values="invalid"/>

<input{field|focus}
  type="text"
  class="native-type-text native-type-text_{validity}"

  name="{name}"
  value="{value}"
  readonly="{readonly}"
  disabled="{disabled}"
  maxlength="{maxlength}"
  autocomplete="{autocomplete}"
  placeholder="{placeholder}"

  event-keydown="keydown"
  event-keyup="keyup"
  event-keypress="keypress"
  event-focus="focus"
  event-blur="blur"
  event-change="change"
  event-input="input"
/>
